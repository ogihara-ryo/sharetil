<% if @user.avatar_url.present? %>
  <%= image_tag @user.avatar_url, width: 20 %>
<% end %>
<%= @user.name %><%= github_link_to @user %>
<br />
<%= @user.bio %>

<%= link_to "#{@user.followees.count} フォロー中", user_followees_path(@user.nickname), class: 'followees_count' %>
<%= link_to "#{@user.followers.count} フォロワー", user_followers_path(@user.nickname), class: 'followers_count' %>
<%= render 'shared/follow_form', user: @user %>
